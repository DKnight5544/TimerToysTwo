
@using TimerToysTwo.Model

@stringifyTime()

@code {

    private int _elapsedTime = 0;

    [Microsoft.AspNetCore.Components.Parameter]
    public int ElapsedTime
    {
        get { return _elapsedTime; }
        set
        {
            _elapsedTime = value;
            StateHasChanged();
        }
    }

    private string stringifyTime()
    {

        int sec = Math.Abs(ElapsedTime);
        int hrs = sec / 3600;

        sec -= (hrs * 3600);

        int min = sec / 60;

        sec -= (min * 60);

        string result;

        if (hrs > 0) result = string.Format("{0:00}:{1:00}:{2:00}", hrs, min, sec);
        else if (min > 0) result = string.Format("{0:00}:{1:00}", min, sec);
        else result = string.Format("{0:00}", sec);

        return result;

    }

}


@using TimerToysTwo.Model

<div class="my-timer" @onclick="ToggleExpand">


    <table class="node-table">
        <tr>
            <td class="node-expand-td">
                <button class="node-expand-button @HotOrNotClass">@MyTimer.ChildCount</button>
            </td>
            <td class="node-name-td">
                <span class="node-name-span" @onclick="OnSelect">
                    @MyTimer.TimerName
                </span>
            </td>
            <td class="node-elapsed-td">
                <span class="node-elapsed-span">
                    (@ElapsedTimeString)
                </span>
            </td>
        </tr>
    </table>

    <div style="margin-left:15px;">
        @{

            if (MyChildTimers == null)
            {
            }
            else
            {
                foreach (Timer child in MyChildTimers.OrderBy(c => c.CreationTime))
                {
                    <Node @ref="MyChildNodes[child.TimerKey]" MyTimer="@child"></Node>
                }
            }
        }
    </div>

</div>

